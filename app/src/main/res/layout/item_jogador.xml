<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:id="@+id/fundoAnimado"
    android:background="@drawable/border_rainbow"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="5dp">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imgJogador"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:contentDescription="Foto do jogador"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        android:background="@drawable/avatar_border"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/game_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomeJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:text="[Nome do Jogador]"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSelecionar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        style="@style/ParalelButton"
        android:textColor="@color/tint"
        android:textStyle="bold"
        android:layout_margin="0dp"
        android:text="Escolher"
        android:layout_marginTop="8dp" />

</LinearLayout>
