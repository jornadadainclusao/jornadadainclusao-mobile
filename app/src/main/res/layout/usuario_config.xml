<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioConfig">

    <TextView
        android:id="@+id/txtTitle_pageGame"
        style="@style/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <TextView
            android:id="@+id/textView10"
            style="@style/text_enun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Tema do App:" />

        <RadioGroup
            android:id="@+id/radioTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp">

            <RadioButton
                android:id="@+id/radioButton"
                style="@style/text_enun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Igual ao do sistema" />

            <RadioButton
                android:id="@+id/radioButton2"
                style="@style/text_enun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo Claro" />

            <RadioButton
                android:id="@+id/radioButton3"
                style="@style/text_enun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo Escuro" />

            <TextView
                android:id="@+id/textView11"
                style="@style/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acessibilidade" />

            <TextView
                android:id="@+id/textView2"
                style="@style/text_enun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Em breve..." />
        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>