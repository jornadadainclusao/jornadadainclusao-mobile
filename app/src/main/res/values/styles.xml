<resources>
    <style name="text_title">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_enun">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/tint</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ParalelButton">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- nÃ£o funfa -->
    <style name="BorderedButton" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/border</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="GameButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingVertical">50dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AboutText" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>
</resources>